<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Nombre</th>
				<th>Titulo</th>
				<th>Email</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			<% _.each(users, function(user) { %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.name %></td>
					<td><%= user.title %></td>
					<td><%= user.email %></td>
					<td>
						<a href="/users/show/<%= user.id %>" class="btn btn-success">Ver</a>
						<a href="/users/edit/<%= user.id %>" class="btn btn-primary">Editar</a>
						<a href="/users/delete/<%= user.id %>" class="btn btn-danger">Eliminar</a>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>